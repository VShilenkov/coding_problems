{
    "version": "2.0.0",
    "windows": {
        "type": "shell",
        "isBackground": false,
        "options": {
            "cwd": "${fileDirname}",
            "env": {
                "VSC_INVOKED": "TRUE"
            },
            "shell": {
                "executable": "PowerShell.exe",
                "args": [
                    "-NoLogo",
                    "-NonInteractive",
                    "-NoProfile"
                ]
            }
        },
        "presentation": {
            "reveal": "always",
            "panel": "shared",
            "echo": true,
            "focus": false,
            "showReuseMessage": false,
            "clear": false
        }
    },
    "linux": {
        "type": "shell",
        "isBackground": false,
        "options": {
            "cwd": "${fileDirname}",
            "env": {
                "VSC_INVOKED": "TRUE"
            }
        },
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": false,
            "clear": false
        }
    },
    "tasks": [
        // ----------------------------------------------------------------- Aux
        {
            "label": "shell.list.env",
            "windows": {
                "command": "gci",
                "args": [
                    "env:*"
                ]
            },
            "linux": {
                "command": "printenv",
            },
            "problemMatcher": []
        }, // shell.list.env
        // ---------------------------------------------------------- Generation
        {
            "label": "cmake.generate",
            "command": "cmake",
            "args": [
                "-G${input:inputCMakeGenerator}",
                "-DCMAKE_BUILD_TYPE=${input:inputBuildType}",
                "-DCMAKE_TOOLCHAIN_FILE:FILEPATH=\"${workspaceFolder}\\cmake\\toolchain\\${input:inputCompiler}_toolchain.cmake\"",
                "-B\".\\build\\${input:inputCompiler}\\${input:inputCMakeGenerator}\\${input:inputBuildType}\"",
                "-S\"${fileDirname}/\""
            ],
            "problemMatcher": []
        }, // cmake.generate
        // --------------------------------------------------------------- Build
        {
            "label": "cmake.build",
            "dependsOn": "cmake.generate",
            "command": "cmake",
            "args": [
                "--build",
                ".\\build\\${input:inputCompiler}\\${input:inputCMakeGenerator}\\${input:inputBuildType}"
            ],
            "group": "build",
            "problemMatcher": {
                "owner": "cpp",
                "applyTo": "allDocuments",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^([a-zA-Z0-9\\\\-_:.]+?\\.(?:cpp|hpp|c|h))\\(([0-9]+),([0-9]+)\\):\\s*(error|warning|info):\\s*(.*?)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    },
                    {
                        "regexp": "^\\s*(.*?)\\s*$",
                        "code": 1
                    },
                    {
                        "regexp": "^\\s*\\^[ ~]*\\s*$"
                    }
                ]
            }
        }, // cmake.build
        // ---------------------------------------------------------- Preprocess
        {
            "label": "cmake.preprocess",
            "dependsOn": "cmake.generate",
            "command": "cmake",
            "args": [
                "--build",
                ".\\build\\${input:inputCompiler}\\${input:inputCMakeGenerator}\\${input:inputBuildType}",
                "--target",
                "main.i"
            ],
            "group": "build",
            "problemMatcher": {
                "owner": "cpp",
                "applyTo": "allDocuments",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^([a-zA-Z0-9\\\\-_:.]+?\\.(?:cpp|hpp|c|h))\\(([0-9]+),([0-9]+)\\):\\s*(error|warning|info):\\s*(.*?)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    },
                    {
                        "regexp": "^\\s*(.*?)\\s*$",
                        "code": 1
                    },
                    {
                        "regexp": "^\\s*\\^[ ~]*\\s*$"
                    }
                ]
            }
        }, // cmake.preprocess
        // ------------------------------------------------------------ Assembly
        {
            "label": "cmake.assembly",
            "dependsOn": "cmake.generate",
            "command": "cmake",
            "args": [
                "--build",
                ".\\build\\${input:inputCompiler}\\${input:inputCMakeGenerator}\\${input:inputBuildType}",
                "--target",
                "main.s"
            ],
            "group": "build",
            "problemMatcher": {
                "owner": "cpp",
                "applyTo": "allDocuments",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^([a-zA-Z0-9\\\\-_:.]+?\\.(?:cpp|hpp|c|h))\\(([0-9]+),([0-9]+)\\):\\s*(error|warning|info):\\s*(.*?)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    },
                    {
                        "regexp": "^\\s*(.*?)\\s*$",
                        "code": 1
                    },
                    {
                        "regexp": "^\\s*\\^[ ~]*\\s*$"
                    }
                ]
            }
        }, // cmake.assembly
        // --------------------------------------------------------------- Clean
        {
            "label": "cmake.clean",
            "command": "cmake",
            "args": [
                "--build",
                ".\\build\\${input:inputCompiler}\\${input:inputCMakeGenerator}\\${input:inputBuildType}",
                "--target",
                "clean"
            ],
            "problemMatcher": []
        }, // cmake.clean
        {
            "label": "shell.clean.all",
            "command": "rm",
            "windows": {
                "args": [
                    "-recurse",
                    ".\\build",
                    "-ErrorAction",
                    "SilentlyContinue"
                ],
            },
            "linux": {
                "args": [
                    "-rf",
                    "./build/"
                ]
            },
            "problemMatcher": []
        }, // shell.clean.all
        // -------------------------------------------------------------- Rebuid
        {
            "label": "cmake.rebuild",
            "dependsOn": [
                "cmake.clean",
                "cmake.build"
            ],
            "problemMatcher": []
        } // cmake.rebuild
    ],
    "inputs": [
        {
            "id": "inputBuildType",
            "description": "Build type",
            "default": "debug",
            "type": "pickString",
            "options": [
                "debug",
                "release"
            ]
        },
        {
            "id": "inputCMakeGenerator",
            "description": "CMake Generator to use",
            "default": "Unix Makefiles",
            "type": "pickString",
            "options": [
                "Unix Makefiles",
                "MinGW Makefiles"
            ]
        },
        {
            "id": "inputCompiler",
            "description": "Compiler to use",
            "default": "gcc",
            "type": "pickString",
            "options": [
                "gcc",
                "clang"
            ]
        }
    ]
}