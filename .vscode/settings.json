{
    "C_Cpp.loggingLevel": "Information",

    "C_Cpp.default.configurationProvider": "vector-of-bool.cmake-tools",
    "C_Cpp.default.compileCommands": "${config:cmake.copyCompileCommands}",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.cppStandard": "c++14",

    "cmake.loggingLevel": "trace",
    
    "cmake.buildDirectory": "${workspaceFolder}/build/${buildKit}/${buildType}",
    "cmake.configureOnOpen": true,
    "cmake.copyCompileCommands": "${workspaceFolder}/build/compile_commands.json",
    "cmake.mingwSearchDirs": ["c:/mingw-w64/mingw64/"],
    
    
    "cmake.useCMakeServer": false,
    
    "editor.emptySelectionClipboard": false,
    "editor.mouseWheelZoom"         : true,
    "editor.renderWhitespace"       : "all",
    "editor.rulers"                 : [80, 120, 160],

    "explorer.sortOrder": "type",

    "files.autoGuessEncoding": true,

    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}${appName}",
    "files.associations": {
        "iostream": "cpp",
        "chrono": "cpp",
        "ratio": "cpp",
        "*.tcc": "cpp",
        "cctype": "cpp",
        "clocale": "cpp",
        "cstdint": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "exception": "cpp",
        "initializer_list": "cpp",
        "iosfwd": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "new": "cpp",
        "ostream": "cpp",
        "stdexcept": "cpp",
        "streambuf": "cpp",
        "system_error": "cpp",
        "type_traits": "cpp",
        "typeinfo": "cpp",
        "utility": "cpp",
        "cmath": "cpp",
        "cstddef": "cpp",
        "cstring": "cpp",
        "ios": "cpp",
        "xfacet": "cpp",
        "xiosbase": "cpp",
        "xlocale": "cpp",
